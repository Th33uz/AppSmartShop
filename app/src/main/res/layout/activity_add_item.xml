<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161925"
    tools:context=".AddItemActivity">

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar item"
        android:textSize="22sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/montserratalternatesextrabold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp" />

    <EditText
        android:id="@+id/inputNomeItem"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Nome do item"
        android:background="@drawable/bg_campo"
        android:textColor="@android:color/white"
        android:textColorHint="#838383"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/txtTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/inputQuantidade"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Quantidade"
        android:inputType="number"
        android:background="@drawable/bg_campo"
        android:textColor="@android:color/white"
        android:textColorHint="#838383"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/inputNomeItem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/spinnerUnidade"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontalWeight="1" />

    <Spinner
        android:id="@+id/spinnerUnidade"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_campo"
        app:layout_constraintTop_toBottomOf="@id/inputNomeItem"
        app:layout_constraintStart_toEndOf="@id/inputQuantidade"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp" />

    <Spinner
        android:id="@+id/spinnerCategoria"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_campo"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/inputQuantidade"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp" />


    <Button
        android:id="@+id/btnAdicionarItem"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:text="Adicionar"
        android:backgroundTint="#9956F6"
        android:textColor="@android:color/white"
        android:fontFamily="@font/montserratalternatesextrabold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/spinnerCategoria"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <ImageView
        android:id="@+id/HomeLogo"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:src="@drawable/iconapp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
